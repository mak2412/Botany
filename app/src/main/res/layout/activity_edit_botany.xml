<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.mobile.botany.EditBotanyActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/colorPrimary"
        android:textColor="#000000"
        android:text="แก้ไข พรรณไม้" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ชื่อทั่วไป" />
            <EditText
                android:id="@+id/txtt_Name_b"
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="ชื่ออังกฤษ" />
            <EditText
                android:id="@+id/txts_Name_b"
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="รายละเอียด" />
            <EditText
                android:id="@+id/txtdetail_b"
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="สรรพคุณ" />
            <EditText
                android:id="@+id/txtbs_b"
                android:layout_weight="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </TableRow>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher_foreground"
                android:layout_marginTop="21dp"
                android:id="@+id/imageView"
                android:layout_marginStart="39dp"
                android:layout_below="@+id/bs_b"
                android:layout_toEndOf="@+id/btnAddData"
                android:layout_weight="0.60" />

            <Button
                android:id="@+id/btnChoosImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignEnd="@+id/t_name_b"
                android:layout_alignTop="@+id/imageView"
                android:layout_marginTop="16dp"
                android:layout_weight="0.17"
                android:text="รูปภาพ"
                android:textSize="10sp" />
        </LinearLayout>

    </TableLayout>
    <Button
        android:id="@+id/btnEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="แก้ไข" />
</LinearLayout>
